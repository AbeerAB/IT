<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".activities.RegisterNewUser">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="#8CCED1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_white"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/back_btn"
                android:layout_marginRight="@dimen/_8sdp"
                />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="إنشاء حساب جديد"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center"
                />
        </LinearLayout>



    </androidx.appcompat.widget.Toolbar>



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:ignore="MissingConstraints,NotSibling">
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background11111"

        app:layout_constraintVertical_bias="0.0">


    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_25sdp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_person_24"
            android:hint="اسم المستخدم"
            android:drawablePadding="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:inputType="text" />

        <EditText
            android:id="@+id/user_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:hint="كلمة المرور"
            android:gravity="right"

            android:drawablePadding="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/conferm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:hint="تأكيد كلمة المرور"
            android:gravity="right"

            android:drawablePadding="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@android:color/darker_gray"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:hint="البريد الإلكتروني"
            android:gravity="right"
            android:drawablePadding="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:inputType="textEmailAddress" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_15sdp"
            android:text="أختيار صورة الحساب :"
            android:id="@+id/chose_imag"
            android:textColor="#000000"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:drawablePadding="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp" />
        <ImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@drawable/user_empty"
            android:radius="1dp"
            android:text="إختيار صورة الحساب"
            android:textColor="#111" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_15sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:text="المستخدم : هو من يستطيع طرح الأسئلة فقط"
                android:textColor="#9E2B2B"
                android:drawablePadding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="right"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_15sdp"
                android:text="الخبير : هو من يستطيع الإجابة عن الأسئلة وطرحها"
                android:textColor="#9E2B2B"
                android:layout_gravity="right"

                android:drawablePadding="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_15sdp"
            android:text="أختيار نوع الحساب :"
            android:textColor="#000000"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:drawablePadding="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp" />
            <RadioGroup
                android:id="@+id/radioGroupType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_13sdp"
                android:checkedButton="@+id/radioGroupGender"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/user"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundbutton2"
                    android:buttonTint="#111"
                    android:gravity=""
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:onClick="onClickedUser"
                    android:text="@string/user" />

                <RadioButton
                    android:id="@+id/expuser"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundbutton2"
                    android:buttonTint="#111"
                    android:onClick="onClickedExp"
                    android:text="@string/exp" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_15sdp"
                android:text="إختيار الخبرة :"
                android:textColor="#111"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text=" البرامج التي تمتلك خبرة بها"
                android:textColor="#8CCED1"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_40sdp">

                <CheckBox
                    android:id="@+id/prog11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Matlab" />

                <CheckBox
                    android:id="@+id/prog12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="SPSS" />

                <CheckBox
                    android:id="@+id/prog13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="EndNote" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_40sdp">

                <CheckBox
                    android:id="@+id/prog14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Oracle" />

                <CheckBox
                    android:id="@+id/prog15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Latex" />

                <CheckBox
                    android:id="@+id/prog16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Microsoft Office" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_40sdp">

            <CheckBox
                android:id="@+id/prog17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"

                android:text="Photoshop and illustrator" />
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:text="أنظمة التشغيل :"
                android:textColor="#8CCED1"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:textStyle="bold"  />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/prog21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Windows" />

                <CheckBox
                    android:id="@+id/prog22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Linux" />

                <CheckBox
                    android:id="@+id/prog23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="MAC" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                android:layout_gravity="center">

                <CheckBox
                    android:id="@+id/prog24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="IOS" />
                <CheckBox
                    android:id="@+id/prog25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Android" />

                </LinearLayout></LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="لغات البرمجة :"
                android:textColor="#8CCED1"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="50dp">

                <CheckBox
                    android:id="@+id/prog1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Java" />

                <CheckBox
                    android:id="@+id/prog2"
                    android:layout_width="wrap_content"
                    android:enabled="false"

                    android:layout_height="wrap_content"
                    android:text="C" />

                <CheckBox
                    android:id="@+id/prog3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="C+" />

                <CheckBox
                    android:id="@+id/prog4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="C++" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_40sdp">


                <CheckBox
                    android:id="@+id/prog5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Script Python" />

                <CheckBox
                    android:id="@+id/prog6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="Visual Basic.Net Java" />

                <CheckBox
                    android:id="@+id/prog7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="R Swift SQL" />
            </LinearLayout></LinearLayout>

        <Button
                android:id="@+id/button3"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:background="@drawable/roundbutton2"
                android:radius="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="تسجيل"
                android:textColor="#111" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loginTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="تسجيل الدخول"
                    android:textColor="#111"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:text=" أنت مسجل سابقا ؟ "
                    android:textColor="#111"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

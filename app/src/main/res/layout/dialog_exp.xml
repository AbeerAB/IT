<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:visibility="visible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:drawablePadding="@dimen/_7sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="المجال الذي يتعلق بسؤالك:"
            android:textColor="#111"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:drawablePadding="@dimen/_7sdp"
            android:paddingTop="5dp"
            android:text="من البرامج:"
            android:textColor="#8CCED1"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_40sdp">

                <CheckBox
                    android:id="@+id/prog11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matlab" />

                <CheckBox
                    android:id="@+id/prog12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPSS" />

                <CheckBox
                    android:id="@+id/prog13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EndNote" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_40sdp">

                <CheckBox
                    android:id="@+id/prog14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oracle" />

                <CheckBox
                    android:id="@+id/prog15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latex" />

                <CheckBox
                    android:id="@+id/prog16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Microsoft Office" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_40sdp">

            <CheckBox
                android:id="@+id/prog17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Photoshop and illustrator" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:drawablePadding="@dimen/_7sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="من أنظمة التشغيل :"
            android:textColor="#8CCED1"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/prog21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Windows" />

                <CheckBox
                    android:id="@+id/prog22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linux" />

                <CheckBox
                    android:id="@+id/prog23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAC" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/prog24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="IOS" />

                <CheckBox
                    android:id="@+id/prog25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:drawablePadding="@dimen/_7sdp"
            android:paddingTop="5dp"
            android:text="من لغات البرمجة:"
            android:textColor="#8CCED1"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="50dp">

                <CheckBox
                    android:id="@+id/prog2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="C" />

                <CheckBox
                    android:id="@+id/prog3"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:text="C+" />

                <CheckBox
                    android:id="@+id/prog4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C++" />

                <CheckBox
                    android:id="@+id/prog1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_25sdp">


                <CheckBox
                    android:id="@+id/prog5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Script Python" />

                <CheckBox
                    android:id="@+id/prog7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R Swift SQL" />

                <CheckBox
                    android:id="@+id/prog6"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:text="Visual Basic.Net Java" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/choose"
            android:layout_width="106dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="#8CCED1"
            android:gravity="center"
            android:text="إختيار"
            android:textColor="#ffffff"

            android:textSize="14sp" />


    </LinearLayout>

</ScrollView>

</RelativeLayout>